generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // or "postgresql" if you're using PostgreSQL
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  bio       String?
  tweets    Tweet[]  // Relation to Tweet model
  likes     Like[]   // Add this line to create the relation with Like model
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Tweet {
  id        Int      @id @default(autoincrement())
  tweet     String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  likes     Like[]   // Add this line to create the relation with Like model
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Like {
  id        Int      @id @default(autoincrement())
  tweet     Tweet    @relation(fields: [tweetId], references: [id])
  tweetId   Int
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}